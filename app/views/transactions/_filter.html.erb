<%= form_tag filter_user_category_transactions_path, method: :get do %>
  <div class="row">
    <div class="col-md-2 mb-4">
      <%= select_tag :type, options_for_select(@types_options, params[:type]), prompt: 'Select Type', class:'form-control form-control-lg' %>
    </div>
    <div class="col-md-2 mb-4">
      <%= select_tag :status, options_for_select(@status_options, params[:status]), prompt: 'Select Status', class:'form-control form-control-lg' %>
    </div>
    <div class="col-md-2 mb-4">
      <%= select_tag :mode, options_for_select(@modes_options, params[:mode]), prompt: 'Select Mode', class:'form-control form-control-lg' %>
    </div>
    <div class="col-md-2 mb-4">
      <%= submit_tag "Filter", class: 'btn btn-primary btn-lg shadow' %>
    </div>
  </div>
<% end %>